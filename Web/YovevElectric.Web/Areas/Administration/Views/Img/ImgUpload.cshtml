@model YovevElectric.Web.ViewModels.Img.ImgUploadViewModel;
@using YovevElectric.Common;
@{
    ViewData["Title"] = "ImgUpload";
}
<body onload="loadImg()">
    <div id="page">
        <section class="main-container col2-right-layout">
            <div class="main container">
                <div class="row">
                    <section class="col-main col-sm-9 col-xs-12 wow bounceInUp animated animated" style="visibility: visible;">
                        <div class="my-account">

                            <div class="box-account">
                                <h3>Качи снимка.</h3>
                                <form method="post" dasp-controller="Files" runat="server" enctype="multipart/form-data" asp-area="Administration" asp-controller="Img" asp-action="ImgUpload">
                                    <div class="row">
                                        <div id="pic1" style="float:left;">
                                            <br>
                                            <input type="hidden" asp-for="@Model.ProductId" name="ProductId" />
                                            <img id="img1" src="@GlobalConstants.DefaultImgProduct" class="defaultImg" alt="your image" />
                                            <br>
                                            <input type='file' name="productImg1" onchange="readURL(this)" />
                                        </div>
                                        <div id="pic2" style="float:left;">
                                            <br>
                                            <img id="img2" src="@GlobalConstants.DefaultImgProduct" class="defaultImg" alt="your image" />
                                            <br>
                                            <input type='file' name="productImg2" onchange="readURL2(this)" />
                                        </div>
                                        <div id="pic3" style="float:left;">
                                            <br>
                                            <img id="img3" src="@GlobalConstants.DefaultImgProduct" class="defaultImg" alt="your image" />
                                            <br>
                                            <input type='file' name="productImg3" onchange="readURL3(this)" />
                                        </div>
                                        <div id="pic4" style="float:left;">
                                            <br>
                                            <img id="img4" src="@GlobalConstants.DefaultImgProduct" class="defaultImg" alt="your image" />
                                            <br>
                                            <input type='file' name="productImg4" onchange="readURL4(this)" />
                                        </div>

                                    </div>
                                    <div style="float:right; margin-top: -20px;">
                                        <button type="submit" value="Upload Imgs" class="btn btn-primary">Качи снимките</button>
                                    </div>
                                </form>
                                
                            </div>
                        </div>
                    </section>
                    <partial name="_AccountNavPartial" />
                </div>
            </div>
        </section>
    </div>
</body>