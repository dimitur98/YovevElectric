@model YovevElectric.Web.ViewModels.Product.EditProductInputModel;
@using YovevElectric.Data.Models;
@{
    ViewData["Title"] = "EditProduct";
}

    <div id="page">
        <section class="main-container col2-right-layout">
            <div class="main container">
                <div class="row">
                    <section class="col-main col-sm-9 col-xs-12 wow bounceInUp animated animated" style="visibility: visible;">
                        <div class="my-account">

                            <div class="box-account">
                                <div class="page-title">
                                    <h2>Редактиране</h2>
                                </div>
                                <form id="form" asp-area="Administration" asp-controller="Administration" asp-action="EditProduct" asp-route-id="@Model.Id" method="post" class="form">
                                    <div class="form-group">
                                        <label asp-for="Title">Заглавие</label>
                                        <input asp-for="Title" type="text" placeholder="Заглавие" class="form-control">
                                        <span asp-validation-for="Title" class="text-danger" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Description">Описание</label>
                                        <input asp-for="Description" type="text" placeholder="Описание" class="form-control">
                                        <span asp-validation-for="Description" class="text-danger" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Category">Категория</label>
                                        <select asp-for="Category" class="form-control" asp-items="@Html.GetEnumSelectList<Categories>()"></select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Price">Цена</label>
                                        <input asp-for="Price" type="number" placeholder="Цена" class="form-control">
                                        <span asp-validation-for="Price" class="text-danger" />
                                    </div>

                                    <button type="submit" title="submit" class="button"><span>Редактиране</span></button>

                                </form>


                            </div>
                        </div>
                    </section>
                    <partial name="_AccountNavPartial" />
                </div>
            </div>
        </section>
    </div>

